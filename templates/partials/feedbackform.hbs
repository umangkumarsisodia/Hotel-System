<div class="container mt-5">
    <h1 class="text-center">Feedback</h1>
    <div class="form-area mt-4">
        <form action="/feedback" method="post">
            <div class="row g-3">
                <div class="col-12">
                    <input type="text" name="name" class="form-control" placeholder="Your name" aria-label="Your name">
                </div>
            </div>
            <div class="row g-3 mt-2">
                <div class="col-12">
                    <textarea rows="10" cols="20" name="feedback" class="form-control" placeholder="Feedback" aria-label="Feedback"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>
</div>